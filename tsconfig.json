{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "esnext",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
, "index.ts"  ],
  "exclude": [
    "test/**/*"
  ]
}
